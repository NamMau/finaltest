<form class="bg-light text-center col-md-8" action="/edit/{{toy._id}}" method="post">
   <div>
      <h1 class="text text-primary">Edit toy</h1>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Name</label>
      <input class="form-control" type="text" name="name" value="{{ name }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Color</label>
      <input class="form-control" type="text" name="color" value="{{ color }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Price</label>
      <input class="form-control" type="text" name="price" value="{{ price }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Description</label>
      <input class="form-control" type="text" name="description" value="{{ description }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Quantity</label>
      <input class="form-control" type="number" name="quantity" value="{{ quantity }}" required>
   </div>
      <div class="form-group mt-3">
   <label class="text text-success">Category</label>
   <select class="form-control" name="category" required>
      <option value="">Select Category</option>
      {{#each categories}}
         <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
   </select>
      </div>
   <div class="form-group mt-3">
      <label class="text text-success">Image</label><br>
      <img src="{{ toy.image}}" width="100" height="100"><br>
      <input class="form-control" type="text" name="image" value="{{ image }}" required>
   </div>
   <div class="form-group mt-3">
      <input class="btn btn-danger" type="submit" value="Edit">
   </div>
</form>