<form class="bg-light text-center col-md-8" action="/category/edit/{{ category._id }}" method="post">
   <div>
      <h1 class="text text-primary">Edit Category</h1>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Name</label>
      <input class="form-control" type="text" name="name" value="{{ category.name }}" required>
   </div>
   <div class="form-group mt-3">
      <input class="btn btn-danger" type="submit" value="Edit">
   </div>
</form>
